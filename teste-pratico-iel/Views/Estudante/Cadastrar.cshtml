
@model teste_pratico_iel.Models.Estudante
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Cadastrar";
}


<form method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" value="@Model.Nome" class="form-control" id="nome" placeholder="Digite o seu nome">
        @Html.ValidationMessage("nome")
    </div>
    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" name="cpf" value="@Model.CPF" class="form-control" id="cpf" placeholder="Digite o seu cpf">
        @Html.ValidationMessage("cpf")
    </div>
    <div class="form-group">
        <label for="endereco">Endereço</label>
        <input type="text" name="endereco" value="@Model.Endereco" class="form-control" id="endereco" placeholder="Digite o seu endereco">
        @Html.ValidationMessage("cpf")
    </div>
    <div class="form-group">
        <label for="estado">Estado</label>
        <select name="estado" class="form-control">
            @foreach (var estado in ViewBag.Estados)
            {
                @if (estado.Id == Model.Estado.Id)
                {
                    <option value="@estado.Id" selected>@estado.UF</option>
                }
                else
                {
                    <option value="@estado.Id">@estado.UF</option>
                }

            }
        </select>
        @Html.ValidationMessage("estado")
    </div>
    <div class="form-group">
        <label for="cidade">Cidade</label>
        <select name="cidade" class="form-control">
            @foreach (var cidade in ViewBag.Cidades)
            {
                @if (cidade.Id == Model.Cidade.Id)
                {
                    <option value="@cidade.Id" selected>@cidade.Nome</option>
                }
                else
                {
                    <option value="@cidade.Id">@cidade.Nome</option>
                }

            }
        </select>
        @Html.ValidationMessage("cidade")
    </div>
    <div class="form-group">
        <label for="instituicao">Instituição</label>
        <select name="instituicao" class="form-control">
            @foreach (var instituicao in ViewBag.Instituicoes)
            {
                @if (instituicao.Id == Model.Instituicao.Id)
                {
                    <option value="@instituicao.Id" selected>@instituicao.Nome</option>
                }
                else
                {
                    <option value="@instituicao.Id">@instituicao.Nome</option>
                }

            }
        </select>
        @Html.ValidationMessage("instituicao")
    </div>
    <div class="form-group">
        <label for="nomecurso">Curso</label>
        <input type="text" name="nomecurso" value="@Model.NomeCurso" class="form-control" id="nomecurso" placeholder="Digite o nome do curso">
        @Html.ValidationMessage("nomecurso")
    </div>
    <div class="form-group">
        <label for="dataconclusao">Data de Conclusão</label>
        <input type="text" name="dataconclusao" value="@Model.DataConclusao" class="form-control" id="dataconclusao" placeholder="Digite a data de conclusão do curso">
        @Html.ValidationMessage("dataconclusao")
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>



