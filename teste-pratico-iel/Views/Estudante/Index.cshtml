
@model IEnumerable<teste_pratico_iel.Models.Estudante>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Estudantes";
}



<a href="/estudante/cadastrar" class="btn btn-primary">Cadastrar</a>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Curso</th>
            <th scope="col">Data de Conclusão</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudante in Model)
        {
            <tr>
                <th scope="row">@estudante.Id</th>
                <td>@estudante.Nome</td>
                <td>@estudante.NomeCurso</td>
                <td>@estudante.DataConclusao</td>
                <td>
                    <a href="/estudante/excluir/@estudante.Id" class="btn">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>


